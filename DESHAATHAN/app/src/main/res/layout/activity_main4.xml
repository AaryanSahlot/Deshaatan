                android:gravity="center|left"
                android:text="   >   Baltal"
                android:textColor="#EF6C00"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="@drawable/zb5" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Baltal is a camping ground for pilgrims, 75 km from Ganderbal town in Ganderbal district of Jammu and Kashmir, India and 93 km from capital city Srinagar and 15 km north of Sonamarg on the Sind River at the base of Zojila pass. This little valley is only a day's journey away from Srinagar and provides a shorter high-altitude alternate route to the sacred cave of Amarnath." />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:gravity="center|left"
                android:text="   >   Bhaderwah"
                android:textColor="#EF6C00"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="match_parent"
